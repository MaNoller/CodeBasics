#Create an iterator for fibonacci series in such a way that each next returns the next element from fibonacci series.
#The iterator should stop when it reaches a limit defined in the constructor.
class fibonacci:
    def __init__(self,limit):
        self.n2=0
        self.n1=1
        self.limit=limit
        self.curr=1
        self.count=1
        
    def __iter__(self):
        return self
        
    def __next__(self):
        if self.limit>self.count:
            self.curr=self.n2+self.n1
            self.n2=self.n1
            self.n1=self.curr
            self.count+=1
            return self.curr
        else:
            raise StopIteration
            
f = iter(fibonacci(8))
while True:
    try:
        print(next(f))
    except StopIteration:
        break
